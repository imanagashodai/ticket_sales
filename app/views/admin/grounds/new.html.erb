<h1 id="admin_top">Groundテーブル（新規登録中）</h1>

<%= render "layouts/admin/ground_search" %>

<ul id="anchors">
  <li><%= link_to "リセット" %></li>
</ul>

<!--編集する変数-->
<% 
m_name = "ground"
m_columns = @ground_columns
model = @ground
m_all = @grounds
%>

<%= form_with model: model, url: send("admin_#{m_name}s_path"), local: true do |f| %>
<table>
  <%= render "layouts/admin/table/thead", m_columns: m_columns %>
  
  <tbody>
    <tr>
      <td></td>
      <td><%= f.text_field :name %></td>
      <td></td>
      <td></td>
      <td><%= f.submit "登録" %></td>
      <td><%= link_to "戻る", send("admin_#{m_name}s_path") %></td>
    </tr>
    
    <% m_all.each do |m_one| %>
      <tr>
        <% m_columns.each do |column| %>
          <td><%= m_one[column] %></td>
        <% end %>
          <td><%= link_to "編集", send("edit_admin_#{m_name}_path", id: m_one.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>