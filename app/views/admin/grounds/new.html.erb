<h1 id="admin_top">Groundテーブル（新規登録中）</h1>

<%= render "layouts/admin/search/ground" %>

<ul id="anchors">
  <li><%= link_to "リセット", admin_grounds_reset_path %></li>
</ul>

<%= form_with model: @ground, url: admin_grounds_path, local: true do |f| %>
<table>
  <%= render "layouts/admin/table/thead", m_columns: @ground_columns %>
  
  <tbody>
    <tr>
      <td></td>
      <td><%= f.text_field :name %></td>
      <td></td>
      <td></td>
      <td><%= f.submit "登録" %></td>
      <td><%= link_to "戻る", admin_grounds_path %></td>
    </tr>
    
    <% @grounds.each do |ground| %>
      <tr>
        <% @ground_columns.each do |column| %>
          <td><%= ground[column] %></td>
        <% end %>
          <td><%= link_to "編集", edit_admin_ground_path(ground.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>