<h1 id="admin_top">Teamテーブル（新規登録中）</h1>

<%= render "layouts/admin/search/team" %>

<ul id="anchors">
  <li><%= link_to "リセット", admin_teams_reset_path %></li>
</ul>

<%= form_with model: @team, url: admin_teams_path, local: true do |f| %>
<table>
  <%= render "layouts/admin/table/thead", m_columns: @team_columns %>
  
  <tbody>
    <tr>
      <td></td>
      <td><%= f.text_field :name %></td>
      <td></td>
      <td></td>
      <td><%= f.select :ground_id, @select_ground, {include_blank: "未定"} %></td>
      <td><%= f.submit "登録" %></td>
      <td><%= link_to "戻る", admin_teams_path %></td>
    </tr>
  
    <% @teams.each do |team| %>
      <tr>
        <% @team_columns.each do |column| %>
          <td><%= team[column] %></td>
        <% end %>
          <td><%= link_to "編集", edit_admin_team_path(team.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>