<h1><%= Ground.find(params[:id]).name %>での試合</h1>

<% if @games.empty? %>
  試合はありません
<% else %>
  <table>
    <thead>
      <tr>
        <th>日付</th>
        <th>開始時刻</th>
        <th>対戦カード</th>
      </tr>
    </thead>
    
    <tbody>
      <% @games.each do |game| %>
        <tr>
          <td><%= game.datetime.strftime("%Y年%m月%d日") %></td>
          <td><%= game.datetime.strftime("%H:%M") %></td>
          <td><%= game.hometeam.name %> ー <%= game.visitorteam.name %></td>
          <td><%= link_to "購入画面へ進む", game_path(game.id) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% end %>