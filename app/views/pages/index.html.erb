<% time = Time.now %>

<h1>本日(<%= time.month %>月<%= time.day %>日)の試合</h1>

<% games = Game.where(datetime: time.all_day) %>

<% if games.empty? %>
  ありません
<% else %>
  <table>
    <thead>
      <tr>
        <th>試合</th>
        <th>場所</th>
      </tr>
    </thead>
    
    <tbody>
      <% games.each do |game| %>
        <%
        game_datetime = game.datetime
        %>
        <tr>
          <td><%= game.hometeam.name %> 対 <%= game.visitorteam.name %></td>
          <td><%= game.ground.name %></td>
          <td><%= link_to "購入画面へ進む", game_path(game.id) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>